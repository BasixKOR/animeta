{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "\\.spec\\.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/../dist/$1"
  },
  "globalSetup": "<rootDir>/utils/globalSetup.ts",
  "globalTeardown": "<rootDir>/utils/globalTeardown.ts"
}
